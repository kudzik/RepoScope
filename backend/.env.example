# RepoScope Backend Environment Variables
# Skopiuj ten plik jako .env i uzupełnij prawdziwe wartości

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# OpenRouter API Configuration (alternatywa dla OpenAI)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# GitHub API Configuration (opcjonalne - zwiększa rate limit)
GITHUB_TOKEN=ghp_your-github-token-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/reposcope

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=true
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# LLM Cost Optimization
USE_OPENROUTER=false
ENABLE_CACHING=true
MAX_TOKENS=2000
