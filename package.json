{
  "name": "reposcope",
  "version": "1.0.0",
  "description": "Repository Analysis Tool powered by AI",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:frontend:fix": "cd frontend && npm run lint:fix",
    "format:frontend": "cd frontend && npm run format",
    "lint:backend": "cd backend && flake8 .",
    "format:backend": "cd backend && black . && isort .",
    "lint:all": "npm run lint:frontend && npm run lint:backend",
    "format:all": "npm run format:frontend && npm run format:backend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx,json,css,md}": [
      "npx prettier --write --config frontend/.prettierrc"
    ],
    "backend/**/*.py": [
      "npx black --config backend/pyproject.toml",
      "npx isort --settings-path backend/pyproject.toml"
    ],
    "*.md": [
      "npx prettier --write"
    ]
  }
}
